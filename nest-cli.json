{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/event-server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/event-server/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/event-server",
  "projects": {
    "event-server": {
      "type": "application",
      "root": "apps/event-server",
      "entryFile": "main",
      "sourceRoot": "apps/event-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/event-server/tsconfig.app.json"
      }
    },
    "auth-server": {
      "type": "application",
      "root": "apps/auth-server",
      "entryFile": "main",
      "sourceRoot": "apps/auth-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-server/tsconfig.app.json"
      }
    },
    "gateway-server": {
      "type": "application",
      "root": "apps/gateway-server",
      "entryFile": "main",
      "sourceRoot": "apps/gateway-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway-server/tsconfig.app.json"
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}